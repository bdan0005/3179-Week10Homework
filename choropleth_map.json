{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Map Choropleth - Birth Rate (births per 1000 population)",
  "data": {
    "name": "world",
    "url": "https://raw.githubusercontent.com/bdan0005/3179-Week10Homework/refs/heads/main/ne_110m.json",
    "format": { "type": "topojson", "feature": "ne_110m" }
  },
  "transform": [
    {
      "lookup": "properties.ISO_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/bdan0005/3179-Week10Homework/refs/heads/main/crude-birth-rate-cleaned.csv",
          "format": { "type": "csv" }
        },
        "key": "Code",
        "fields": ["BirthRate"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "BirthRate",
          "type": "quantitative",
          "scale": { "scheme": "viridis" },
          "title": "Crude Birth Rate"
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "BirthRate", "type": "quantitative", "title": "Birth Rate (per thousand people)" }
        ]
      }
    },
    {
      "data": {
        "graticule": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    }
  ],
  "projection": { "type": "equalEarth" },
  "background": "white"
}
